{
    "manifest_version": 3,
    "name": "Organize Tabs By Domain Name",
    "description": "A chrome extension for managing multiple opened tabs effectively by grouping them based on the domain name of the URL",
    "version": "1.0",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "https://*/*"
    ],
    "permissions": [
        "tabGroups"
    ]
}